<h2 class="text-center"><%= t 'log_in' %></h2>
<hr />

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <%= f.label (t "users.email"), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label (t "users.password"), class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <%= f.label (t 'users.remember_me') do %>
            <%= f.check_box :remember_me %> <%= t "users.remember_me" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit (t "log_in"), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-offset-2 col-sm-10">
    <%= render "devise/shared/links" %>
  </div>
</div>
