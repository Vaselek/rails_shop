<div class="row">
  <div class="col-sm-12">
    <h1><%= t "admin.products" %> <%= link_to (t "admin.new_product"), new_admin_product_path, class: 'btn btn-success' %></h1>
  </div>
</div>

<hr />

<table class="table table-striped">
  <tr>
    <th><%= t "admin.image" %></th>
    <th><%= t "admin.title" %></th>
    <th><%= t "admin.description" %></th>
    <th><%= t "admin.price" %></th>
    <th><%= t "admin.category" %></th>
    <th><%= t "admin.actions" %></th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.picture_url(:thumb) %></td>
        <td><%= product.send("title_" + "#{I18n.locale}") %></td>
        <td><%= product.send("description_" + "#{I18n.locale}") %></td>
        <td><%= product.price %></td>
        <td><%= product.category.send("name_" + "#{I18n.locale}") %></td>
        <td>
          <%= link_to (t "admin.view"), admin_product_path(product) %>
          <%= link_to (t "admin.edit"), edit_admin_product_path(product) %>
          <%= link_to (t "admin.delete"), admin_product_path(product),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this product?'} %>
        </td>
      </tr>
  <% end %>

</table>
