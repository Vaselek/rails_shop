<%= form_for [:admin, @product], html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group <%= 'has-error' if @product.errors[:title].any? %>">
      <%= f.label (t "admin.title"), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field "title_#{I18n.locale}".to_sym , class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :title %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @product.errors[:description].any? %>">
      <%= f.label (t "admin.description"), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area "description_#{I18n.locale}".to_sym, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :description %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @product.errors[:price].any? %>">
      <%= f.label (t "admin.price"), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :price, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :price %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @product.errors[:category_id].any? %>">
      <%= f.label :category_id, ( t "admin.category" ), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.collection_select :category_id, Category.all, :id, "name_#{I18n.locale}".to_sym, {}, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :category_id %>
      </div>
    </div>

    <div class="form-group <%= 'has-error' if @product.errors[:picture].any? %>">
      <%= f.label (t "admin.picture"), class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :picture %>
        <%= render 'shared/field_errors', object: @product, field_name: :picture %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>